<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <!-- University Logo -->
    <ImageView
        android:id="@+id/university_logo"
        android:layout_width="55dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="University Logo"
        android:src="@drawable/university_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- University Name -->
    <TextView
        android:id="@+id/university_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jahangirnagar University"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/university_logo"
        android:layout_marginStart="13dp"
        android:layout_marginTop="24dp" />

    <!-- Student Photo -->
    <ImageView
        android:id="@+id/student_photo"
        android:layout_width="163dp"
        android:layout_height="158dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="Student Photo"
        android:scaleType="centerCrop"
        android:src="@drawable/student_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/university_logo" />

    <!-- Student Name -->
    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="22dp"
        android:text="SOVON MALLICK"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="30sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_photo" />

    <!-- Student ID -->
    <TextView
        android:id="@+id/student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Student ID Number: 20200650750"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_name" />

    <!-- Hall Name -->
    <TextView
        android:id="@+id/hall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Resident: Sheikh Russel Hall"
        android:textSize="21sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_id" />

    <!-- Department -->
    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Department: Computer Science and Engineering"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hall_name" />

    <!-- Batch -->
    <TextView
        android:id="@+id/batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Batch: 49"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/department" />

    <!-- Blood Group -->
    <TextView
        android:id="@+id/blood_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:text="Blood Group: B+"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/batch"
        app:layout_constraintTop_toBottomOf="@id/department" />

    <!-- Validity -->
    <TextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Validity: 31-05-2025"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blood_group" />

    <!-- Signature Image -->

    <!-- Signature of Registrar -->

    <ImageView
        android:id="@+id/registrar_signature_image"
       android:layout_width="wrap_content"
        android:layout_height="100dp"
       android:layout_marginStart="140dp"
        android:layout_marginTop="12dp"

       android:contentDescription="Registrar Signature"
        android:src="@drawable/signature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blood_group" />

    <TextView
        android:id="@+id/registrar_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="90dp"
        android:text="Signature of Registrar"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blood_group" />

    <!-- "Contact Me" Label -->
    <TextView
        android:id="@+id/contact_me_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Me "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/calligraphy_style"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/icon_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icons in a Row (Moved to Bottom) -->
    <LinearLayout
        android:id="@+id/icon_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Call Icon -->
        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/mobile"
            android:contentDescription="Call"
            android:layout_marginEnd="16dp" />

        <!-- Email Icon -->
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/mail"
            android:contentDescription="Email"
            android:layout_marginEnd="16dp" />


        <!-- WhatsApp Icon -->
        <ImageView
            android:id="@+id/whatsapp_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/whatsapp"
            android:contentDescription="WhatsApp"
            android:layout_marginEnd="16dp" />

        <!-- GitHub Icon -->
        <ImageView
            android:id="@+id/github_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/github"
            android:contentDescription="GitHub"
            android:layout_marginEnd="16dp" />

        <!-- LinkedIn Icon -->
        <ImageView
            android:id="@+id/linkedin_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/linkedin"
            android:contentDescription="LinkedIn" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
